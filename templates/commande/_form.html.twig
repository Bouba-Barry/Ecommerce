%} #}
{% block content %}
	{{ form_start(form) }}
	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">
		<div class="container-full">
			<div id="message">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
			</div>
			<!-- Content Header (Page header) -->
			<div class="content-header">
				<div class="d-flex align-items-center">
					<div class="mr-auto">
						<h3 class="page-title">Modifier L'etat de La commande</h3>
						<div class="d-inline-block align-items-center">
							<nav>
								<ol class="breadcrumb">
									<li>
										<a href="{{ path('app_commande_index') }}" class="btn btn-primary btn-md">
											Retour</a>
									</li>
								</ol>
							</nav>
						</div>
					</div>
				</div>
			</div>

			<!-- Main content -->
			<section class="content">
				<div class="row">
					<div class="col-12">
						<div class="box">
							<div class="box-body">
								<div class="form-group row">
									<label class="col-form-label col-md-2">Etat de la Commande</label>
									<div class="mb-3 col-md-10">
										{{ form_row(form.status) }}

										<span class="form-text text-muted">{{
                    form_errors(form.status)
                  }}</span>
									</div>
								</div>
								<div class="mb-3 col-12">
									<button class="btn btn-info btn-rounded margin-top-10">
										{{ button_label|default('Modifier') }}
									</button>
								</div>
							</div>

							<!-- /.box-body -->
						</div>
						<!-- /.box -->
					</div>
					<!-- ./col -->
				</div>
				<!-- /.row -->
			</section>
			<!-- /.content -->
		</div>
	</div>
	<!-- /.content-wrapper -->
{% endblock %}
