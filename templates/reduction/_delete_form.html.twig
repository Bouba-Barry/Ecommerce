<form
  method="post"
  action="{{ path('app_reduction_delete', { id: reduction.id }) }}"
  onsubmit="return confirm('vous voulez  le supprimer vraiment ??');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ reduction.id) }}"
  />
  <button class="btn btn-danger btn-md"><i class="fa fa-trash"></i></button>
</form>
