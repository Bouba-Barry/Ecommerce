{% extends 'admin.html.twig' %} {% block stylesheet %} {% endblock stylesheet %}
{# {% block title %}Produit index{% endblock %} #} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Reduction</h3>
          <div class="d-inline-block align-items-center">
            <ol>
              <li class="breadcrumb">
                <a
                  href="{{ path('app_reduction_index') }}"
                  class="btn btn-primary btn-md"
                  >Tous les Reductions</a
                >
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <p style="display: none" id="id_reduction">{{ reduction.id }}</p>
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table
                  id="example5"
                  class="table table-bordered table-striped"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th>Designation</th>
                      <th>Pourcentage</th>
                      <th>Date fin</th>
                      <th>Produits Associés</th>
                      <th class="col-2">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>{{ reduction.designation }}</td>
                      <td>{{ reduction.pourcentage }}</td>
                      <td>{{ reduction.datefin|date('Y-m-d \\HH:i:s') }}</td>
                      <td>
                        {% for produit in reduction.produits %}

                        {{ produit.designation }}<br />
                        {% else %} Aucun Produit associé {% endfor %}
                      </td>
                      <td>
                        <a
                          href="{{
                            path('app_reduction_edit', { id: reduction.id })
                          }}"
                          class="btn btn-md btn-warning closebtn popup-youtube"
                        >
                          <i class="fa fa-edit"></i>
                        </a>
                        {#
                        <a
                          href="{{
                            path('app_produit_delete', { id: produit.id })
                          }}"
                          class="btn btn-md btn-danger"
                        >
                          <i class="fa fa-trash"></i>
                        </a>
                        #}
                        {{ include("reduction/_delete_form.html.twig") }}
                      </td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>Designation</th>
                      <th>Pourcentage</th>
                      <th>Date fin</th>
                      <th>Produits Associés</th>
                      <th></th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>

