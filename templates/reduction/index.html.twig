{% extends 'admin.html.twig' %} 

{% block stylesheet %} {% endblock stylesheet %}
{# {% block title %}Produit index{% endblock %}  #}
{% block content %}

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
	  <div class="container-full">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="d-flex align-items-center">
				<div class="mr-auto">
					<h3 class="page-title">Reduction</h3>
					<div class="d-inline-block align-items-center">
						<nav>
							<ol class="breadcrumb">
								<li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
								{# <li class="breadcrumb-item" aria-current="page"></li> #}
								<li class="breadcrumb-item" aria-current="page"><a class="btn btn-primary btn-sm" href="{{ path('app_reduction_new') }}">Ajouter Une Reduction</a></li>
							</ol>
						</nav>
					</div>
				</div>
			</div>
		</div>

		<!-- Main content -->
		<section class="content">
		  <div class="row">
			  

			<div class="col-12">

			 <div class="box">
				<div class="box-header with-border">
				  <h3 class="box-title">Parcourir Les Reductions</h3>
				</div>
				<!-- /.box-header -->
				<div class="box-body">
					<div class="table-responsive">
					  <table id="example5" class="table table-bordered table-striped" style="width:100%">
						<thead>
							<tr>
							<th class="col-1">ID</th>
							<th>Designation</th>
                            <th>Pourcentage</th>
                            <th>Periode</th>
                            <th>Produits Associés</th>
                            <th class="col-2">Action<th>
						
							</tr>
						</thead>
						<tbody>
							 {% for reduction in reductions %}
							<tr>
								<td class="">{{ reduction.id }}</td>
               					 <td>{{ reduction.designation }}</td>
                                 <td>{{ reduction.pourcentage }}</td>
                                 <td>{{ reduction.periode }}</td>
                                <td>
                                    {% for produit in reduction.produits %}

                                        {{ produit.designation }}<br>
                                        {% else %}
                                            Aucun Produit associé
                                    {% endfor %}
                                </td>
                				<td>
									<a href="{{ path('app_reduction_show', {'id': reduction.id}) }}" class="btn btn-md btn-primary">
                          				<i class="fa fa-eye"></i>
                        			</a>
                        			<a href="{{ path('app_reduction_edit', {'id': reduction.id}) }}" class="btn btn-md btn-warning">
		                          <i class="fa fa-edit"></i>
         	               		</a>
            	            	{# <a href="{{ path('app_produit_delete', {'id': produit.id}) }}" class="btn btn-md btn-danger">
                	          	<i class="fa fa-trash"></i>
                    	    	</a> #}
                                {{ include('reduction/_delete_form.html.twig') }}
							</td>
							</tr>
							{% else %}
            				<tr>
                				<td colspan="9">no records found</td>
            				</tr>
        				{% endfor %}
						</tbody>
						<tfoot>
							<tr>
							<th>ID</th>
							<th>Designation</th>
                            <th>Pourcentage</th>
                            <th>Periode</th>
                            <th>Produits Associés</th>
							</tr>
						</tfoot>
					</table>
					</div>
				</div>
				<!-- /.box-body -->
			  </div>
			  <!-- /.box -->      
			</div>  
			<!-- /.col -->
		  </div>
		  <!-- /.row -->
		</section>
		<!-- /.content -->
	  
	  </div>
  </div>
  <!-- /.content-wrapper -->

    
{% endblock %}
{% block javascript %}
<script src="{{ asset('assets/vendor_components/datatable/datatables.min.js') }} "></script>
	<script src="{{ asset('main/js/pages/data-table.js') }}"></script>
{% endblock %}