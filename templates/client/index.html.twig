{% extends 'client.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {  margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    {# .profile { flex: 0.8; border: 5px solid black;} #}
</style>

<div class="example-wrapper">
    <h1>Hello {{ app.user.nom }}! ✅</h1>

<div class="profile">
    <h2>Vos Informations personnelles</h2>
     <table>
    <thead>
        <tr>
            <th>Nom<th>
            <th>Prenom<th>
            <th>adresse<th>
            <th>email<th>
            <th>Action<th>
        </tr>
    <thead>
    <tbody>
    <tr>
        <td>{{ app.user.nom }}</td>
        <td>{{ app.user.prenom }}</td>
        <td>{{ app.user.adresse }}</td>
        <td>{{ app.user.email }}</td>
        <td><a href="{{ path('app_client_edit', {'id': app.user.id}) }}">edit</a></td>
    <tr>
    <tbody>
    </table>

</div>
    <div>
    <h2>les commandes effectuer</h2>
    <h2></h2>
    <table>
    <thead>
        <tr>
            {# <th>date Commande<th> #}
            <th>adresse livraison<th>
            <th>methode de payment<th>
            <th>Produits<th>
            <th>Prix Unité<th>
        </tr>
    <thead>
     {# {{ dump(app.user) }} #}
    <tbody>
    {% for commande in app.user.getCommandes() %}
    <tr>
        {# <td>{{ commande.getDateCmd() }}<td> #}
        <td>{{ commande.getAdresseLivraison() }}</td>
        <td>{{ commande.getMethodPayement() }}</td>
        {% for prod in commande.getProduit() %}
        <td>{{ prod.getDesignation() }} </td>
        <td>{{ prod.getAncienPrix() }}DHS</td>
        {% endfor %}
    <tr>
    {% endfor %}
    <tbody>
    </table>
    </div>

</div>
{% endblock %}
