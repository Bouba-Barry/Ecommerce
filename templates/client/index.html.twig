        <tr>
            <th>date Commande<th>
            <th>adresse livraison<th>
            <th>methode de payment<th>
            <th>Produits<th>
        </tr>
    <thead>
     {# {{ dump(app.user) }} #}
    <tbody>
    {% for commande in app.user %}
    <tr>
        <td>{{ commande.date_cmd }}<td>
        <td>{{ commande.adresse_livraison }}</td>
        <td>{{ commande.methode_payment }}</td>
        {% for prod in commande.produits %}
