{% extends 'admin.html.twig' %} {% block stylesheet %} {% endblock stylesheet %}
{# {% block title %}Produit index{% endblock %} #} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Variation</h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              <li>
                <a
                  href="{{
                    path('app_variation_index_attribut', {
                      id: variation.getAttribut().id
                    })
                  }}"
                  class="btn btn-primary btn-md"
                  >Liste Variations</a
                >
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table
                  id="example5"
                  class="table table-bordered table-striped"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th class="col-1">ID</th>
                      <th>Nom</th>
                      <th>Code</th>
                      <th>Attribut</th>
                      <th>Produits Associés</th>
                      <th class="col-2">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="">{{ variation.id }}</td>
                      <td>{{ variation.nom }}</td>
                      <td>{{ variation.code }}</td>
                      <td>{{ variation.attribut.nom }}</td>
                      <td>
                        {% for produit in variation.produits %}

                        {{ produit.designation }}<br />
                        {% else %} Aucun Produit associé {% endfor %}
                      </td>
                      <td>
                        <a
                          href="{{
                            path('app_variation_edit', { id: variation.id })
                          }}"
                          class="btn btn-md btn-warning mb-5"
                        >
                          <i class="fa fa-edit"></i>
                        </a>
                        {#
                        <a
                          href="{{
                            path('app_produit_delete', { id: produit.id })
                          }}"
                          class="btn btn-md btn-danger"
                        >
                          <i class="fa fa-trash"></i>
                        </a>
                        #}
                        {{ include("variation/_delete_form.html.twig") }}
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

{% endblock %}
