{% extends 'admin.html.twig' %} {% block stylesheet %} {% endblock stylesheet %}
{# {% block title %}Produit index{% endblock %} #} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <div id="message">
      {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
      {% endfor %} {% for message in app.flashes('suppression') %}
      <div class="alert btn-danger">
        {{ message }}
      </div>
      {% endfor %}
    </div>
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">
            Liste Variations pour l attribut : {{ attribut.getNom() }}
          </h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              {#
              <li>
                <a
                  href="{{ path('app_attribut_index_aside') }}"
                  class="btn btn-primary btn-md"
                  >Liste Attributs</a
                >
              </li>
              #}
              <li>
                <div class="col-12">
                  <div class="box box-default" style="background-color: beige">
                    <!-- /.box-header -->
                    <div class="box-body">
                      <!-- Nav tabs -->
                      <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                          <a
                            class="nav-link active"
                            id="home-tab"
                            href="{{ path('app_attribut_index_aside') }}"
                            aria-controls="home5"
                            aria-expanded="true"
                            ><span class="hidden-sm-up"
                              ><i class="ion-home"></i
                            ></span>
                            <span class="hidden-xs-down"
                              >Liste Attributs</span
                            ></a
                          >
                        </li>

                        <li class="nav-item">
                          <a
                            class="nav-link"
                            href="{{
                              path('app_variation_new_aside_variation', {
                                id: attribut.id
                              })
                            }}"
                          >
                            <span class="hidden-sm-up"
                              ><i class="ion-email"></i
                            ></span>
                            <span class="hidden-xs-down"
                              >Ajouter Une Variation</span
                            >
                          </a>
                        </li>
                      </ul>
                      <!-- Tab panes -->
                    </div>
                    <!-- /.box-body -->
                  </div>
                  <!-- /.box -->
                </div>
              </li>
            </ol>
          </div>
        </div>
        <a
          href="{{ path('app_variation_corbeille') }}"
          style="font-size: 20px; color: blue"
          >Corbeille
          <i class="fa-solid fa-trash" style="font-size: 25px"></i>
        </a>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table
                  id="example5"
                  class="table table-bordered table-striped"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th class="col-1">ID</th>
                      <th>Nom</th>
                      <th>Code</th>

                      <th class="col-3">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for variation in variations %}
                    <tr>
                      <td class="">{{ variation.id }}</td>
                      <td>{{ variation.nom }}</td>
                      <td>{{ variation.code }}</td>

                      <td>
                        <a
                          href="{{
                            path('app_variation_show', { id: variation.id })
                          }}"
                          class="btn btn-md btn-primary"
                        >
                          <i class="fa fa-eye"></i>
                        </a>
                        <a
                          href="{{
                            path('app_variation_edit', { id: variation.id })
                          }}"
                          class="btn btn-md btn-warning"
                        >
                          <i class="fa fa-edit"></i>
                        </a>
                        <a
                          {#
                          href="{{
                            path('app_variation_delete', { id: variation.id . })
                          }}"
                          #}
                          class="btn btn-md btn-danger"
                        >
                          <i class="fa fa-trash"></i>
                        </a>
                        {# {{ include("variation/_delete_form.html.twig") }} #}
                      </td>
                    </tr>
                    {% else %}
                    <tr>
                      <td colspan="9">no records found</td>
                    </tr>
                    {% endfor %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>ID</th>
                      <th>Nom</th>
                      <th style="border-right: 1px solid #d5dfea">Code</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

{% endblock %} {% block javascript %}
<script src="{{
    asset('assets/vendor_components/datatable/datatables.min.js')
  }} "></script>
<script src="{{ asset('main/js/pages/data-table.js') }}"></script>
{% endblock %}
