{% extends 'admin.html.twig' %} {% block stylesheet %} {% endblock stylesheet %}
{# {% block title %}Produit index{% endblock %} #} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Liste Variations Supprimes</h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              <li>
                <a
                  href="{{ path('app_variation_index') }}"
                  class="btn btn-primary btn-md"
                  >Liste Variations</a
                >
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table
                  id="example5"
                  class="table table-bordered table-striped"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th class="col-1">ID</th>
                      <th>Nom</th>
                      <th>Code</th>
                      <th>Attribut</th>
                      <th>Produits Associés</th>
                      <th class="col-3">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for variation in variations %}
                    <tr>
                      <td class="">{{ variation.id }}</td>
                      <td>{{ variation.nom }}</td>
                      <td>{{ variation.code }}</td>
                      <td>{{ variation.attribut.nom }}</td>
                      <td>
                        {% for produit in variation.produits %}

                        {{ produit.designation }}<br />
                        {% else %} Aucun Produit associé {% endfor %}
                      </td>
                      <td>
                        <a
                          href="{{
                            path('app_variation_restore', { id: variation.id })
                          }}"
                          class="btn btn-md btn-success"
                        >
                          Restore
                          <i class="fa-solid fa-trash-can-arrow-up"></i>
                        </a>
                        <a
                          href="{{
                            path('app_variation_delete_fromcorbeille', {
                              id: variation.id
                            })
                          }}"
                          class="btn btn-md btn-danger"
                        >
                          delete from trash
                          <i class="fa fa-trash"></i>
                        </a>
                        {# {{ include("variation/_delete_form.html.twig") }} #}
                      </td>
                    </tr>
                    {% else %}
                    <tr>
                      <td colspan="9">no records found</td>
                    </tr>
                    {% endfor %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>ID</th>
                      <th>Designation</th>
                      <th>Pourcentage</th>
                      <th>Periode</th>
                      <th style="border-right: 1px solid #d5dfea">
                        Produits Associés
                      </th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

{% endblock %} {% block javascript %}
<script src="{{
    asset('assets/vendor_components/datatable/datatables.min.js')
  }} "></script>
<script src="{{ asset('main/js/pages/data-table.js') }}"></script>
{% endblock %}
