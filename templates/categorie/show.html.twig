{% extends 'admin.html.twig' %} {% block stylesheet %} {% endblock stylesheet %}
{# {% block title %}Produit index{% endblock %} #} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Categorie</h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              <li>
                <a
                  href="{{ path('app_categorie_index_aside') }}"
                  class="btn btn-primary btn-md"
                  >Liste Categories</a
                >
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table
                  id="example5"
                  class="table table-bordered table-striped"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th col-1>ID</th>
                      <th>Nom De la Categorie</th>
                      <th>Sous Categorie</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="">{{ categorie.id }}</td>
                      <td>{{ categorie.titre }}</td>
                      <td>
                        {% for sous_categorie in categorie.getSousCategories()
                        %}
                        {{ sous_categorie.getTitre() }} , {% endfor %}
                      </td>
                      <td>
                        <a
                          href="{{
                            path('app_categorie_edit', { id: categorie.id })
                          }}"
                          class="btn btn-md btn-warning mb-5"
                        >
                          <i class="fa fa-edit"></i>
                        </a>
                        {{ include("categorie/_delete_form.html.twig") }}
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

{% endblock %}
