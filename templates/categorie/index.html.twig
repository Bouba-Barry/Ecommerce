{% extends 'admin.html.twig' %} {% block stylesheet %} {% endblock stylesheet %}
{# {% block title %}Produit index{% endblock %} #} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <div id="message" style="margin-top: 5px">
      {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
      {% endfor %} {% for message in app.flashes('suppression') %}
      <div class="alert btn-danger">
        {{ message }}
      </div>
      {% endfor %}
    </div>
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Liste Categories</h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              <li>
                <a
                  href="{{ path('app_categorie_new_aside') }}"
                  class="btn btn-primary btn-md closebtn popup-youtube"
                  >Ajouter Une Categorie
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="36"
                    height="26"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="white"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-plus"
                  >
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                  </svg>
                </a>
              </li>
            </ol>
          </div>
        </div>
        <div>
          <a
            href="{{ path('app_categorie_corbeille') }}"
            style="font-size: 20px; color: blue"
            >Corbeille
            <i class="fa-solid fa-trash" style="font-size: 25px"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
              <form
                action="{{ path('app_categorie_delete_group') }}"
                method="POST"
              >
                <div class="table-responsive">
                  <table
                    id="example5"
                    class="table table-bordered table-striped"
                    style="width: 100%"
                  >
                    <thead>
                      <tr>
                        <th class="col-1"></th>
                        <th>Nom De la Categorie</th>
                        <th>Sous Categories</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for categorie in categories %}
                      <tr>
                        <td>
                          <div>
                            <input
                              type="checkbox"
                              id="{{ categorie.id }}"
                              name="check{{ categorie.id }}"
                            />
                            <label for="{{ categorie.id }}"></label>
                          </div>
                        </td>
                        <td>{{ categorie.titre }}</td>
                        <td>
                          {% for sous_categorie in categorie.getSousCategories()
                          %}
                          {{ sous_categorie.getTitre() }} , {% endfor %}
                        </td>
                        <td>
                          <a
                            href="{{
                              path('app_categorie_show', { id: categorie.id })
                            }}"
                            class="btn btn-md btn-primary"
                          >
                            <i class="fa fa-eye"></i>
                          </a>
                          <a
                            href="{{
                              path('app_categorie_edit', { id: categorie.id })
                            }}"
                            class="btn btn-md btn-warning closebtn popup-youtube"
                          >
                            <i class="fa fa-edit"></i>
                          </a>
                          <a
                            onclick="return confirm('vous voulez  le supprimer vraiment ??');"
                            href="{{
                              path('app_categorie_delete_get', {
                                id: categorie.id
                              })
                            }}"
                            class="btn btn-md btn-danger"
                          >
                            <i class="fa fa-trash"></i>
                          </a>
                        </td>
                      </tr>
                      {% else %}
                      <tr>
                        <td colspan="9">no records found</td>
                      </tr>
                      {% endfor %}
                    </tbody>
                    <tfoot>
                      <tr>
                        <th></th>
                        <th>Nom Categorie</th>
                        <th style="border-right: 1px solid #d5dfea">
                          Produits
                        </th>
                        <th></th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
                <div class="row">
                  <div class="col-5"></div>
                  <div class="col-7">
                    <button
                      class="btn"
                      onclick="return confirm('vous voulez  les supprimer vraiment ??');"
                    >
                      <strong>supprimer</strong
                      ><i style="color: red" class="fa fa-trash"></i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

{% endblock %} {% block javascript %}
<script src="{{
    asset('assets/vendor_components/datatable/datatables.min.js')
  }} "></script>
<script src="{{ asset('main/js/pages/data-table.js') }}"></script>
<script src="{{ asset('main/js/categorie/ajouter_categorie.js') }}"></script>

{% endblock %}
