{% extends 'admin.html.twig' %}
{% block stylesheets %}

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
{% endblock %}
{# {% block title %}Produit index{% endblock %} #}
{% block
content %}

	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">
		<div
			class="container-full">
			<div id="message">
				{% for message in app.flashes('success') %}
				<div class="alert alert-success">
				  {{ message }}
				</div>
				{% endfor %}
				{% for message in app.flashes('suppression') %}
				<div class="alert btn-danger">
				  {{ message }}
				</div>
				{% endfor %}
			  </div>
			<!-- Content Header (Page header) -->
			<div class="content-header">
				<div class="d-flex align-items-center">
					<div class="mr-auto">
						<h3 class="page-title">Les Images</h3>
						<div class="d-inline-block align-items-center">
							
								<ol class="breadcrumb">
									{# <li>
										<a
										  href="{{
											path('app_quantite_index_variable', { id: produit.id })
										  }}"
										  class="btn btn-primary btn-md"
										  >Retour</a
										>
									  </li> #}
									  <li>
										<div class="col-12">
										  <div class="box box-default" style="background-color: beige">
											<!-- /.box-header -->
											<div class="box-body">
											  <!-- Nav tabs -->
											  <ul class="nav nav-tabs" id="myTab" role="tablist">
												<li class="nav-item">
												  <a
													class="nav-link active"
													id="home-tab"
													href="{{
														path('app_quantite_index_variable', { id: produit.id })
													  }}"
													aria-controls="home5"
													aria-expanded="true"
													><span class="hidden-sm-up"
													  ><i class="ion-home"></i
													></span>
													<span class="hidden-xs-down">Retour</span></a
												  >
												</li>
												<li class="nav-item">
												  <a
													class="nav-link"
													id="home-tab"
													href="{{ path('app_produit_index') }}"
													aria-controls="home5"
													aria-expanded="true"
													><span class="hidden-sm-up"
													  ><i class="ion-home"></i
													></span>
													<span class="hidden-xs-down"
													  >Liste Produits</span
													></a
												  >
												</li>
						
												
												<li class="nav-item">
												  <a
													class="nav-link"
													href="{{
													  path('app_image_new_variable_produiut', {
														id: produit.id
													  })
													}}"
												  >
													<span class="hidden-sm-up"
													  ><i class="ion-email"></i
													></span>
													<span class="hidden-xs-down"
													  >Ajouter une Image</span
													>
												  </a>
												</li>
											  </ul>
											  <!-- Tab panes -->
											</div>
											<!-- /.box-body -->
										  </div>
										  <!-- /.box -->
										</div>
									  </li>
								</ol>
							
						</div>
					</div>
				</div>
			</div>

			<!-- Main content -->
			<section class="content">
				<div class="row">


					<div class="col-12">

						<div class="box">
							
							<!-- /.box-header -->
							<div class="box-body">
								<div class="table-responsive">
									<table id="example5" class="table table-bordered table-striped" style="width:100%">
										<thead>
											<tr>
												<th col-1>ID</th>
												<th>image</th>
												<th>produit</th>
												<th>variation</th>
												<th class="col-3">Action</th>
											</tr>
										</thead>
										<tbody>
											{% for image in images %}
												<tr>
													<td class="col-1">{{ image.id }}</td>
													<td><img src={{ asset('uploads/others/' ~ image.url ) }} width="80" height="70"></td>
													<td>{{ image.produit.designation }}</td>
													<td>{{ image.variation.nom }}</td>
													{% if image.produit.user.id == app.user.id %}
														<td>
															<a href="{{ path('app_image_show', {'id': image.id}) }}" class="btn btn-md btn-primary">
																<i class="fa fa-eye"></i>
															</a>
															<a href="{{ path('app_image_edit_variable', {'id': image.id , 'slug':produit.id }) }}" class="btn btn-md btn-warning">
																<i class="fa fa-edit"></i>
															</a>
															<a href="{{ path('app_image_show', {'id': image.id  }) }}" class="btn btn-md btn-danger">
																<i class="fa fa-trash"></i>
															</a>
														</td>
													{% else %}
														<td></td>
													{% endif %}
												</tr>
											{% else %}
												<tr>
													<td colspan="9">no records found</td>
												</tr>
											{% endfor %}
										</tbody>
										<tfoot>
											<tr>
												<th>ID</th>
												<th>Image</th>
												<th>produit Associé</th>
												<th>variation associé</th>
												<th style="border-right: 1px solid #d5dfea">Action</th>
											</tr>
										</tfoot>
									</table>
								</div>
							</div>
							<!-- /.box-body -->
						</div>
						<!-- /.box -->
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</section>
			<!-- /.content -->

		</div>
	</div>
</div>
<!-- /.content-wrapper -->{% endblock %}{% block javascript %}
<script src="{{ asset('assets/vendor_components/datatable/datatables.min.js') }} "></script>
<script src="{{ asset('main/js/pages/data-table.js') }}"></script>

{% endblock %}
