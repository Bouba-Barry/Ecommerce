                              <svg xmlns="http://www.w3.org/2000/svg" width="36" height="26" viewBox="0 0 24 24" fill="none" stroke="blue" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                            </a>

                              </div>
                            <div class="col-12">
                              <div class="box">
                                <form
                action="{{ path('app_lien_delete_group') }}"
                method="POST"
              >
              <input type="text" style="display: none;" name="slide" value="{{ slide.id }}" >
                                <!-- /.box-header -->
                                <div class="box-body">
                                 
                                  <div class="table-responsive">
                                    <table
                                      id="example5"
                                      class="table table-bordered table-striped"
                                      style="width: 100%"
                                    >
                                      <thead>
                                        <tr>
                                         
                                          <th class="col-1"></th>
                                          <th>image</th>
                                          <th>url</th>
                                          <th>Action</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        {% for image in liens %}
                                        <tr>
                                          <td>
                                            <div>
                                              <input
                                                type="checkbox"
                                                id="{{ image.id }}"
                                                name="check{{  image.id }}"
                                              />
                                              <label for="{{  image.id }}"></label>
                                            </div>
                                          </td>
                                          <td><img style="width:200px ; height:200px" src="{{ asset('FrontOffice/slide/' ~ image.getImage()) }}" alt=""></td>
                                          <td><a href="{{ image.getUrl() }}">{{ image.getUrl() }}</a></td>
                                          
                                          <td>
                                          
                                            <a
                                              {# href="{{
                                                path('app_sous_categorie_edit_aside', {
                                                  id: sous_categorie.id,
                                                  slug: categorie.id
                                                })
                                              }}" #}

                                              href="{{ path('app_lien_edit',{id:image.id,slug:slide.id}) }}"
                                              
                                              class="btn btn-md btn-warning closebtn popup-youtube"
                                            >
                                              <i class="fa fa-edit"></i>
                                            </a>
                                            <a
                                            onclick="return confirm('vous voulez  le supprimer vraiment ??');"
                                            href="{{
                                              path('app_lien_delete_get', {
                                                id: image.id , slug:slide.id
                                              })
                                            }}"
                                            class="btn btn-md btn-danger"
                                          >
                                            <i class="fa fa-trash"></i>
                                          </a>
                                          
                                          </td>
                                        </tr>
                                        {% else %}
                                        <tr>
                                          <td colspan="9">no records found</td>
                                        </tr>
                                        {% endfor %}
                                      </tbody>
                                      <tfoot>
                                        <tr>
                                         <th></th>
                                          <th >image</th>
                                          <th>url</th>
                                          <th></th>
                                        </tr>
                                      </tfoot>
                                    </table>
                                  </div>


                                  <div class="row">
                                    <div class="col-5"></div>
                                    <div class="col-7">
                                      <button
                                        class="btn"
                                        onclick="return confirm('vous voulez  les supprimer vraiment ??');"
                                      >
                                        <strong>supprimer</strong
                                        ><i style="color: red" class="fa fa-trash"></i>
                                      </button>
                                    </div>
                                  </div>
                                </form>

                                </div>
