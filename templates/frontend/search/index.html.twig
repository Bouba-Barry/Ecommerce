{% extends "frontend/index.html.twig" %}
{% block title %}Page de Recherche
{% endblock %}

{% block content %}

<!-- Start Page Banner -->
	<div class="page-banner-area">
		<div class="d-table">
			<div class="d-table-cell">
				<div class="container">
					<div class="page-banner-content">
						<h2>Resultat de Votre Recherche</h2>
						<ul>
							<li>
								<a href=" {{ path('app_home') }} " class="default-btn">Retour à l'accueil</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	{#  End Page Banner #}
	{# start the main block   #}

	<!-- Start Top Products Area -->
		<section class="top-products-area pt-100 pb-100"> 
		<div class="container js-filter">
		<div  class="row">
 		{% if value is not null and value is not empty %}	
			<div class="col-lg-3 js-filter-form">
			<h5>Filtrez Votre Recherche</h5>
				{% include 'frontend/search/_filter.html.twig' %}
			</div>
		<div class="col-lg-9">
		<div class="row js-filter-content" id="content">
			{% include 'frontend/search/_produit.html.twig' %}
			</div>
		</div>
		</div>
		{% else %}
		<p class="alert alert-info">Veuillez Vérifier Votre rechercher, voir Recommencez</p>
		{% endif %}
	</div>
</div>
</section><!-- End Top Products Area -->{# end of the main block #}{% endblock %}
{% block javascripts %}
<script src="{{ asset('js/panier3.js') }}"></script>

<script src="{{ asset('FrontOffice/other/search.js') }} "></script>
{% endblock %}
