{% for prod in produits %}
	<div class="col-lg-3 col-md-6">
		<div class="top-products-item">
			<div class="products-image">
				<a href="{{ path('app_shop_details', { id: prod.id }) }}"><img src="{{ asset('uploads/produits/' ~ prod.getImageProduit() ) }}" style="width: 250px; height: 200px" alt="image"/></a>

				<ul class="products-action">
					<li>
						<a id="addtocart{{ prod.id }}" class="addtocart" data-tooltip="tooltip" data-placement="top" title="Add to Cart">
							<i class="flaticon-shopping-cart"></i>
						</a>
					</li>
					<li>
						<a id="addtowish{{ prod.id }}" class="addtowish" data-tooltip="tooltip" data-placement="top" title="Add to Wishlist">
							<i class="flaticon-heart"></i>
						</a>
					</li>
					<li>
						<a data-tooltip="tooltip" id="searchbtn{{ prod.id }}" class="search" data-placement="top" title="Quick View" data-toggle="modal" data-target="#productsQuickView">
							<i class="flaticon-search"></i>
						</a>
					</li>
				</ul>
				{% if prod.getReduction()|length != 0 %}
					<div class="sale">
						<span>
							{% for produit_reduction in prod.getReduction() %}
								-{{
                        produit_reduction.getPourcentage()
                      }}
							{% endfor %}
						</span>
					</div>
				{% endif %}
			</div>

			<div class="products-content">
				<h3>
					<a href="{{ path('app_shop_details', { id: prod.id }) }}">{{
                      prod.designation
                    }}</a>
				</h3>
				<div class="price">
					{% if prod.getNouveauPrix() %}
						<span class="new-price">{{ prod.getNouveauPrix() }}
							Dhs</span>
						<span class="old-price">{{ prod.getAncienPrix() }}
							Dhs</span>
					{% else %}
						<span class="new-price">{{ prod.getAncienPrix() }}
							Dhs</span>
					{% endif %}
				</div>
				<ul class="rating">
					<li>
						<i class="bx bxs-star"></i>
						<i class="bx bxs-star"></i>
						<i class="bx bxs-star"></i>
						<i class="bx bxs-star"></i>
						<i class="bx bx-star"></i>
					</li>
				</ul>
			</div>
		</div>
	</div>
{% endfor %}
