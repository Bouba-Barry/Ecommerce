{% extends "frontend/index.html.twig" %}
{% block title %}Shop List
{% endblock %}

{% block content %}

	<!-- Start Page Banner -->
	<div class="page-banner-area">
		<div class="d-table">
			<div class="d-table-cell">
				<div class="container">
					<div class="page-banner-content">
						<h2>Categories Disponible</h2>
						<ul>
							<li>
								<a href="{{ path('app_home') }}">Accueil</a>
							</li>
							<li>Categories</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	{#  End Page Banner #}
	{# start the main block   #}
	<section class="services-area pt-100 pb-100">
		<div class="container">
			<div class="section-title">
				<p></p>
			</div>

			<div class="row">
				{% for categorie in categories %}
					<div class="col-lg-3 col-md-6">
						<div class="single-services-box">
							<div
								class="icon">
								{# <i class="flaticon-"></i> #}
								{% if categorie.getIcone() == NULL %}
									<svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-slack">
										<path d="M14.5 10c-.83 0-1.5-.67-1.5-1.5v-5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5v5c0 .83-.67 1.5-1.5 1.5z"></path>
										<path d="M20.5 10H19V8.5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"></path>
										<path d="M9.5 14c.83 0 1.5.67 1.5 1.5v5c0 .83-.67 1.5-1.5 1.5S8 21.33 8 20.5v-5c0-.83.67-1.5 1.5-1.5z"></path>
										<path d="M3.5 14H5v1.5c0 .83-.67 1.5-1.5 1.5S2 16.33 2 15.5 2.67 14 3.5 14z"></path>
										<path d="M14 14.5c0-.83.67-1.5 1.5-1.5h5c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5h-5c-.83 0-1.5-.67-1.5-1.5z"></path>
										<path d="M15.5 19H14v1.5c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5-.67-1.5-1.5-1.5z"></path>
										<path d="M10 9.5C10 8.67 9.33 8 8.5 8h-5C2.67 8 2 8.67 2 9.5S2.67 11 3.5 11h5c.83 0 1.5-.67 1.5-1.5z"></path>
										<path d="M8.5 5H10V3.5C10 2.67 9.33 2 8.5 2S7 2.67 7 3.5 7.67 5 8.5 5z"></path>
									</svg>
								{% else %}
									<img src="{{ asset('uploads/categories/' ~ categorie.getIcone() ) }} "/>
								{% endif %}
							</div>
							<h3>{{ categorie.titre }}</h3>
							<p>
								{{ categorie.description }}
							</p>
							<a href="{{ path('app_prod_by_cate', { id: categorie.id }) }}" class="read-btn">Voir Les produits +</a>
						</div>
					</div>

				{% endfor %}
			</div>
		</div>
		<!-- Start Top Products Area -->
	<!-- End Top Products Area -->
		{# end of the main block #}
	{% endblock %}
	{% block javascripts %}
		<script src="{{ asset('js/panier3.js') }}"></script>
	{% endblock %}
