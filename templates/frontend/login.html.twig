{% extends 'frontend/index.html.twig' %}
{% block title %}
	Connexion
{% endblock %}
{% block content %}

	<!-- Start Page Banner -->
	<div class="page-banner-area item-bg4">
		<div class="d-table">
			<div class="d-table-cell">
				<div class="container">
					<div class="page-banner-content">
						<h2>Connexion</h2>
						<ul>
							<li>
								<a href="{{ path('app_home') }}">Acceuil</a>
							</li>
							<li>Connexion</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Page Banner -->
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<!-- Start Login Area -->
	<section class="login-area ptb-100">
		<div class="container">
			<div class="login-form">
				<h2>Connectez-Vous</h2>

				<form action="{{ path('app_login') }}" method="post">
					<div class="form-group">
						<label>email</label>
						<input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="email"/>
					</div>

					<div class="form-group">
						<label>Password</label>
						<input type="password" name="_password" id="password" class="form-control" placeholder="Password"/>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
					</div>

					<div class="row align-items-center">
						<div class="col-lg-6 col-md-6 col-sm-6">
							<div class="form-check">
								<input type="checkbox" class="form-check-input" id="checkme"/>
								<label class="form-check-label" for="checkme">me-Souviens</label>
							</div>
						</div>

						<div class="col-lg-6 col-md-6 col-sm-6 lost-your-password">
							<a href="{{ path('app_forgot') }}" class="lost-your-password"></a>
							Mot de passe oublie?</a>
					</div>
				</div>
				<input type="hidden" name="_target_path" value="/"/>
				<button type="submit" class="default-btn">Connexion</button>
			</form>
		</div>
	</div>
</section>
<!-- End Login Area -->{% endblock %}
