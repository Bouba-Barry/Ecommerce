{% extends 'admin.html.twig' %} {% block content %}

<div class="content-wrapper">
  <div class="container-full">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Utilisateur</h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              <li>
                <a
                  href="{{ path('app_user_index') }}"
                  class="btn btn-primary btn-md"
                  >Tous les Utilisateurs</a
                >
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <p id="user_id" style="display: none">{{ app.user.id }}</p>
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <div class="box-body">
              <div class="table-responsive">
                <table
                  id="complex_header"
                  class="table table-striped table-bordered display"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th rowspan="2">Nom Complet</th>
                      <th colspan="2">HR Informations</th>
                      <th colspan="2">Contact</th>
                      <th rowspan="2">Produits</th>

                      <th rowspan="2">Action</th>
                      {#
                      <th rowspan="2"></th>
                      #}
                    </tr>
                    <tr>
                      <th>Adresse</th>
                      <th class="col-1">Roles</th>
                      <th>Telephone</th>
                      <th style="border-right: 1px solid #d5dfea">E-mail</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>{{ user.Nom }} {{ user.prenom }}</td>
                      <td>{{ user.adresse }}</td>
                      <td>
                        <select size="1" id="row-1-office" name="row-1-office">
                          <option value="Roles" selected="selected">
                            Roles Here
                          </option>
                          {% for role in user.roles %}

                          <option value="{{ role }}">
                            {{ role }}
                          </option>

                          {% endfor %}
                        </select>
                      </td>
                      <td>{{ user.telephone }}</td>
                      <td>{{ user.email }}</td>
                      <td>
                        {% for produit in user.getProduits() %}
                        <a href="#" style="color: black">{{
                          produit.designation
                        }}</a>
                        , {% endfor %}
                      </td>

                      <td>
                        {#
                        <a href="#" class="btn btn-md btn-primary">
                          <i class="fa fa-eye"></i>
                        </a>
                        #}
                        <a
                          href="{{ path('app_user_edit', { id: user.id }) }}"
                          class="btn btn-md btn-warning closebtn popup-youtube"
                        >
                          <i class="fa fa-edit"></i>
                        </a>
                        {#
                        <a
                          href="{{ path('app_user_delete', { id: user.id }) }}"
                          class="btn btn-md btn-danger"
                        >
                          <i class="fa fa-trash"></i>
                        </a>
                        #}
                        {{ include("user/_delete_form.html.twig") }}
                      </td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>Nom</th>
                      <th>Adresse</th>
                      <th>Roles</th>
                      <th>Telephone</th>
                      <th>Email</th>
                      <th>Produit</th>

                      <th></th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>

{% endblock %} {% block javascript %} {#
<script src="{{
    asset('assets/vendor_components/datatable/datatables.min.js')
  }}"></script>
<script src="{{ asset('main/js/pages/data-table.js') }}"></script>
#}
<script src="{{ asset('main/js/user/editer_user.js') }}"></script>

{% endblock %}
