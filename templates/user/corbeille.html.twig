{% extends 'admin.html.twig' %} {% block stylesheets %}

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
  integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>
{% endblock %} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <div id="message">
      {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
      {% endfor %} {% for message in app.flashes('suppression') %}
      <div class="alert btn-danger">
        {{ message }}
      </div>
      {% endfor %}
    </div>
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Liste Users Supprimes</h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              <li>
                <a
                  href="{{ path('app_user_index') }}"
                  class="btn btn-primary btn-md"
                  >Tous Les Utilisateurs</a
                >
              </li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <div class="box-body">
              <div class="table-responsive">
                <table
                  id="complex_header"
                  class="table table-striped table-bordered display"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th rowspan="2">Nom Complet</th>
                      <th colspan="2">HR Information</th>
                      <th colspan="2">Contact</th>
                      <th rowspan="2" colspan="2">Restore</th>
                    </tr>
                    <tr>
                      <th>Adresse</th>
                      <th>Roles</th>
                      <th>Telephone</th>
                      <th style="border-right: 1px solid #d5dfea">E-mail</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for user in users %}
                    <tr>
                      <td>{{ user.Nom }} {{ user.prenom }}</td>
                      <td>{{ user.adresse }}</td>
                      <td>
                        <select size="1" id="row-1-office" name="row-1-office">
                          <option value="Roles" selected="selected">
                            Roles Here
                          </option>
                          {% for role in user.roles %}

                          <option value="{{ role }}">
                            {{ role }}
                          </option>

                          {% endfor %}
                        </select>
                      </td>
                      <td>{{ user.telephone }}</td>
                      <td>{{ user.email }}</td>
                      <td>
                        <a
                          href="{{ path('app_user_restore', { id: user.id }) }}"
                          class="btn btn-md btn-success"
                        >
                          Restorer
                          <i class="fa-solid fa-trash-can-arrow-up"></i>
                        </a>
                        <a
                          href="{{
                            path('app_user_delete_fromcorbeille', {
                              id: user.id
                            })
                          }}"
                          class="btn btn-md btn-danger"
                        >
                          supprimer d√©finitivement
                          <i class="fa fa-trash"></i>
                        </a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>Name</th>
                      <th>Position</th>
                      <th>Salary</th>
                      <th>Office</th>
                      <th style="border-right: 1px solid #d5dfea">Extn.</th>
                      <th></th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

{% endblock %} {% block javascript %}
