{% extends 'admin.html.twig' %} {% block stylesheets %}

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
  integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>
{% endblock %} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <div id="message">
      {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
      {% endfor %} {% for message in app.flashes('suppression') %}
      <div class="alert btn-danger">
        {{ message }}
      </div>
      {% endfor %}
    </div>
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Tous les Utilisateurs</h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              <li>
                <a
                  {#
                  href="{{ path('app_user_new') }}"
                  #}
                  id="ajout"
                  data-tooltip="tooltip"
                  data-placement="top"
                  title="Quick View"
                  data-toggle="modal"
                  data-target="#products"
                  class="btn btn-primary btn-md"
                  >Ajouter Un Utilisateur
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="36"
                    height="26"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="white"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-plus"
                  >
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                  </svg>
                </a>
              </li>
            </ol>
          </div>
        </div>
        <div>
          <a
            href="{{ path('app_user_corbeille') }}"
            style="font-size: 20px; color: blue"
            >Corbeille
            <i class="fa-solid fa-trash" style="font-size: 25px"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <div class="box-body">
              {#
              <div>
                <input type="checkbox" id="scales" name="scales" checked />
                <label for="scales">Scales</label>
              </div>

              <div>
                <input type="checkbox" id="horns" name="horns" />
                <label for="horns">Horns</label>
              </div>
              #}
              <form action="{{ path('app_user_delete_group') }}" method="POST">
                <div class="table-responsive">
                  <table
                    id="complex_header"
                    class="table table-striped table-bordered display"
                    style="width: 100%"
                  >
                    <thead>
                      <tr>
                        <th rowspan="2"></th>
                        <th rowspan="2">Nom Complet</th>
                        <th colspan="2">HR Informations</th>
                        <th colspan="2">Contact</th>
                        <th rowspan="2" colspan="2">Action</th>
                      </tr>
                      <tr>
                        <th>Adresse</th>
                        <th>Roles</th>
                        <th>Telephone</th>
                        <th style="border-right: 1px solid #d5dfea">E-mail</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for user in users %}
                      <tr>
                        <td>
                          <div>
                            <input
                              type="checkbox"
                              id="{{ user.id }}"
                              name="check{{ user.id }}"
                            />
                            <label for="{{ user.id }}"></label>
                          </div>
                        </td>
                        <td>{{ user.Nom }} {{ user.prenom }}</td>
                        <td>{{ user.adresse }}</td>
                        <td>
                          <select
                            size="1"
                            id="row-1-office"
                            name="row-1-office"
                          >
                            <option value="Roles" selected="selected">
                              Roles ici
                            </option>
                            {% for role in user.roles %}

                            <option value="{{ role }}">
                              {{ role }}
                            </option>

                            {% endfor %}
                          </select>
                        </td>

                        <td>{{ user.telephone }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                          <a
                            href="{{ path('app_user_show', { id: user.id }) }}"
                            class="btn btn-md btn-primary"
                          >
                            <i class="fa fa-eye"></i>
                          </a>
                          <a
                            data-tooltip="tooltip"
                            data-placement="top"
                            title="Quick View"
                            data-toggle="modal"
                            data-target="#products"
                            id="edit{{ user.id }}"
                            class="btn btn-md btn-warning edit"
                          >
                            <i class="fa fa-edit"></i>
                          </a>
                          <a
                            onclick="return confirm('vous voulez  le supprimer vraiment ??');"
                            href="{{
                              path('app_user_delete_get', { id: user.id })
                            }}"
                            class="btn btn-md btn-danger"
                          >
                            <i class="fa fa-trash"></i>
                          </a>
                        </td>
                      </tr>
                      {% endfor %}
                    </tbody>
                    <tfoot>
                      <tr>
                        <th></th>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Roles</th>
                        <th>Telephone</th>
                        <th>Email</th>
                        <th></th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
                <div class="row">
                  <div class="col-5"></div>
                  <div class="col-7">
                    <button
                      class="btn"
                      onclick="return confirm('vous voulez  les supprimer vraiment ??');"
                    >
                      <strong>supprimer</strong
                      ><i style="color: red" class="fa fa-trash"></i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

