{% extends 'admin.html.twig' %} {% block stylesheet %} {% endblock stylesheet %}
{# {% block title %}Produit index{% endblock %} #} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Quantite</h3>
          <div class="d-inline-block align-items-center">
            <nav>
              <ol class="breadcrumb">
                {#
                <li class="breadcrumb-item">
                  <a href="#"><i class="mdi mdi-home-outline"></i></a>
                </li>
                #} {#
                <li class="breadcrumb-item" aria-current="page"></li>
                #}
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Detail Quantite</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <a
                  class="btn btn-primary mb-15"
                  href="{{ path('app_produit_index') }}"
                  >back to list</a
                >

                <table
                  id="example5"
                  class="table table-bordered table-striped"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th col-1>ID</th>
                      <th>Produit</th>
                      <th>Quantite en Stock</th>
                      <th>Variations</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="col-1">{{ quantite.id }}</td>
                      <td>{{ quantite.getProduit().designation }}</td>
                      <td>{{ quantite.getQteStock() }}</td>
                      <td>
                        {% for quantit_variations in quantite.getVariations() %}
                        <a>{{ quantit_variations }},</a>
                        {% endfor %}
                      </td>
                      {#
                      <td>{{ produit.nouveauPrix }}Dhs</td>
                      #}

                      <td>
                        <a class="btn btn-md btn-warning mb-5">
                          <i class="fa fa-edit"></i>
                        </a>
                        {{ include("quantite/_delete_form.html.twig") }}
                      </td>
                    </tr>
                  </tbody>
                  {#
                  <tfoot class="mb-5"></tfoot>
                  #}
                </table>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

