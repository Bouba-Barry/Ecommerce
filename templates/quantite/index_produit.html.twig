{% extends 'admin.html.twig' %} {% block content %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <div class="container-full">
    <div id="message">
      {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
      {% endfor %} {% for message in app.flashes('suppression') %}
      <div class="alert btn-danger">
        {{ message }}
      </div>
      {% endfor %}
    </div>

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Variations</h3>
          <div class="d-inline-block align-items-center">
            <ol class="breadcrumb">
              {#
              <li>
                <a
                  href="{{
                    path('app_produit_edit_variable', { id: produit.id })
                  }}"
                  class="btn btn-primary btn-md"
                  >Retour</a
                >
              </li>
              #}
              <li>
                <div class="col-12">
                  <div class="box box-default" style="background-color: beige">
                    <!-- /.box-header -->
                    <div class="box-body">
                      <!-- Nav tabs -->
                      <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                          <a
                            class="nav-link active"
                            id="home-tab"
                            href="{{
                              path('app_produit_edit_variable', {
                                id: produit.id
                              })
                            }}"
                            aria-controls="home5"
                            aria-expanded="true"
                            ><span class="hidden-sm-up"
                              ><i class="ion-home"></i
                            ></span>
                            <span class="hidden-xs-down">Retour</span></a
                          >
                        </li>
                        <li class="nav-item">
                          <a
                            class="nav-link"
                            id="home-tab"
                            href="{{ path('app_produit_index') }}"
                            aria-controls="home5"
                            aria-expanded="true"
                            ><span class="hidden-sm-up"
                              ><i class="ion-home"></i
                            ></span>
                            <span class="hidden-xs-down"
                              >Liste Produits</span
                            ></a
                          >
                        </li>

                        <li class="nav-item">
                          <a
                            class="nav-link"
                            href="{{
                              path('app_quantite_new_variable_produit', {
                                id: produit.id
                              })
                            }}"
                          >
                            <span class="hidden-sm-up"
                              ><i class="ion-email"></i
                            ></span>
                            <span class="hidden-xs-down"
                              >Ajouter des Variations</span
                            >
                          </a>
                        </li>
                        <li class="nav-item">
                          <a
                            class="nav-link"
                            href="{{
                              path('app_image_index_variable', {
                                id: produit.id
                              })
                            }}"
                          >
                            <span class="hidden-sm-up"
                              ><i class="ion-email"></i
                            ></span>
                            <span class="hidden-xs-down"
                              >Modifier les images</span
                            >
                          </a>
                        </li>
                      </ul>
                      <!-- Tab panes -->
                    </div>
                    <!-- /.box-body -->
                  </div>
                  <!-- /.box -->
                </div>
              </li>

              {#
              <li>
                <a
                  href="{{
                    path('app_image_index_variable', { id: produit.id })
                  }}"
                  class="btn btn-primary btn-md"
                  >Modifier les images</a
                >
              </li>
              #}
            </ol>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="box">
            <div class="box-body">
              <h3>Produit : {{ produit.getDesignation() }}</h3>
              <div class="table-responsive">
                <table
                  id="complex_header"
                  class="table table-striped table-bordered display"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th colspan="2">Combinaison des Variations</th>

                      <th colspan="1">quantite en Stock</th>
                      <th rowspan="2"></th>
                    </tr>

                    <tr>
                      <th colspan="1">Variations</th>

                      <th colspan="1">Attribut</th>

                      <th style="border-right: 1px solid #d5dfea"></th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for quantite in quantites %}

                    <tr>
                      <td>
                        {% for variation in quantite.getVariations() %}
                        <a>{{ variation }},</a>
                        {% endfor %}
                      </td>
                      <td>
                        {% for variation in quantite.getVariations() %} {% set i
                        = 0 %} {% for attribut in attributs %} {% for
                        attribut_variation in attribut.getVariations() %} {% if
                        variation ==attribut_variation.getNom() and i==0 %}

                        {{ attribut.getNom() }}, {% set i = 1 %} {% endif %} {%
                        endfor %} {% endfor %} {% endfor %}
                      </td>
                      <td>{{ quantite.getQteStock() }}</td>

                      <td>
                        <a
                          class="btn btn-md btn-primary"
                          href="{{
                            path('app_quantite_show', { id: quantite.id })
                          }}"
                        >
                          <i class="fa fa-eye"></i>
                        </a>
                        <a
                          class="btn btn-md btn-warning"
                          href="{{
                            path('app_quantite_edit_variable', {
                              id: quantite.id,
                              slug: produit.id
                            })
                          }}"
                        >
                          <i class="fa fa-edit"></i>
                        </a>
                        <a
                          class="btn btn-md btn-danger"
                          href="{{
                            path('app_quantite_show', { id: quantite.id })
                          }}"
                        >
                          <i class="fa fa-trash"></i>
                        </a>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
</div>
<!-- /.content-wrapper -->

{% endblock %} {% block javascript %}
<script src="{{
    asset('assets/vendor_components/datatable/datatables.min.js')
  }} "></script>
