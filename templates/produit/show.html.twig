{% extends 'admin.html.twig' %} {# {% block stylesheets %}
<link rel="stylesheet" href="{{ asset('main/css/my_style.css') }}" />
{% endblock %} #} {% block title %}Produit index{% endblock %} {% block content
%}

<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
  <div class="container-full">
    <div id="message">
      {% for message in app.flashes('success') %}
      <div class="alert alert-success">
        {{ message }}
      </div>
      {% endfor %} {% for message in app.flashes('suppression') %}
      <div class="alert btn-danger">
        {{ message }}
      </div>
      {% endfor %}
    </div>
    <p id="user" style="display: none;">{{ app.user.id }}</p>
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="d-flex align-items-center">
        <div class="mr-auto">
          <h3 class="page-title">Produit</h3>
          <div class="d-inline-block align-items-center">
            {#
            <ol class="breadcrumb">
              <li>
                <a
                  href="{{ path('app_produit_index') }}"
                  class="btn btn-primary btn-md"
                  >Liste Produits</a
                >
              </li>
            </ol>
            #}
            <ul class="nav nav-tabs customtab2" role="tablist">
              <li class="nav-item">
                <a
                 
                  href="{{ path('app_produit_index') }}"
                  class="nav-link"
                  ><span class="hidden-sm-up"><i class="ion-home"></i></span>
                  <span class="hidden-xs-down">Tous les Produits</span></a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link active"
                  data-toggle="tab"
                  href="#informations"
                  role="tab"
                  ><span class="hidden-sm-up"><i class="ion-home"></i></span>
                  <span class="hidden-xs-down">Informations Globales</span></a
                >
              </li>
              {% if produit.getType()=="variable" %}
              <li class="nav-item">
                <a
                  class="nav-link"
                  data-toggle="tab"
                  href="#variations"
                  role="tab"
                  ><span class="hidden-sm-up"><i class="ion-person"></i></span>
                  <span class="hidden-xs-down">Listes des Variations</span></a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link"
                  data-toggle="tab"
                  href="#images"
                  role="tab"
                  ><span class="hidden-sm-up"><i class="ion-email"></i></span>
                  <span class="hidden-xs-down">Liste des Images</span></a
                >
              </li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-content">
      <div class="tab-pane active" id="informations" role="tabpanel">
        <div class="p-15">

          <section class="content">
            <div class="row">
              <div class="col-12">
                <div class="box">
                  <div class="row">
                    <div
                      class="col-5"
                      style="
                        display: flex;
                        align-items: center;
                        justify-content: center;
                      "
                    >
                      <img style="width:100%;height:auto" src=
                      {{ asset('uploads/produits/' ~ produit.imageProduit ) }}
                      width="80" height="70">
                    </div>
                    <div class="col-7">
                      <div class="row">
                        <div class="col-8">
                          <p id="produit_id" style="display: none">
                            {{ produit.id }}
                          </p>
                        </div>
                        {% if produit.getType()=="stable" %}
                        
                        <div
                          class="col-4"
                          style="
                            display: flex;
                            align-items: end;
                            justify-content: end;
                          "
                        >
                          <a
                            class="btn btn-md btn-warning"
                            id="editproduit"
                            data-tooltip="tooltip"
                            data-placement="top"
                            title="Quick View"
                            data-toggle="modal"
                            data-target="#products"
                          >
                            Editer <i class="fa fa-edit"></i>
                          </a>
                          {{ include("produit/_delete_form.html.twig") }}
                        </div>
                        {% else %}
                        <div
                        class="col-4"
                        style="
                          display: flex;
                          align-items: end;
                          justify-content: end;
                        "
                      >
                        <a
                          class="btn btn-md btn-warning popup-youtube"
                          href="{{ path('app_produit_edit_variable' , {id:produit.id} )  }}"
                        >
                          Editer <i class="fa fa-edit"></i>
                        </a>
                        {{ include("produit/_delete_form.html.twig") }}
                      </div>
                        {% endif %}
                        <div class="col-12">
                          <h3>Designation :</h3>
                          <p>
                            <strong>
                              {{ produit.designation }}
                            </strong>
                          </p>
                        </div>
                        <div class="col-12">
                          <h3>Description :</h3>
                          <p>
                            <strong>
                              {{ produit.description }}
                            </strong>
                          </p>
                        </div>
                        <div class="col-12">
                          <h3>Description Detaille :</h3>
                          <p>
                            <strong>
                              {{ produit.getDescriptionDetaille }}
                            </strong>
                          </p>
                        </div>
                        {% if produit.getNouveauPrix() != NULL %}
                        <div class="col-12">
                          <h3>Nouveau Prix :</h3>
                          <p>
                            <strong> {{ produit.getNouveauPrix() }} DH </strong>
                          </p>
                          <h3>Ancien Prix :</h3>
                          <p>
                            <strong> {{ produit.getAncienPrix() }} DH </strong>
                          </p>
                        </div>
                        {% else %}
                        <div class="col-12">
                          <h3>Prix :</h3>
                          <p>
                            <strong> {{ produit.getAncienPrix() }} DH </strong>
                          </p>
                        </div>
                        {% endif %}
                        <div class="col-12">
                          <h3>Quantite En Stock :</h3>
                          <p>
                            <strong>
                              {{ produit.qteStock }}
                            </strong>
                          </p>
                        </div>
                        <div class="col-12">
                          <h3>Categorie :</h3>
                          <p>
                            <strong>
                              {{
                                produit.getSousCategorie().getCategorie().getTitre()
                              }}
                            </strong>
                          </p>
                        </div>
                        <div class="col-12">
                          <h3>Sous Categorie :</h3>
                          <p>
                            <strong>
                              {{ produit.getSousCategorie().getTitre() }}
                            </strong>
                          </p>
                        </div>
                        <div class="col-12">
                          <h3>Type de Produit:</h3>
                          <p>
                            <strong>
                              {{ produit.getType() }}
                            </strong>
                          </p>
                        </div>
                        <div class="col-12">
                          {% if produit.getAttributs()|length !=0 %}
                          <h3>Attributs:</h3>
                          {% for attribut in produit.getAttributs() %}
      
                          <div class="col-12">
                            <h4>{{ attribut.nom }}</h4>
                            {% if attribut.getVariations()|length != 0 %}
                            <ul>
                              {% for variation in attribut.getVariations() %} {% if
                              variation in produit.getVariation() %}
                              <li>
                                {{ variation.nom }}
                              </li>
                              {% endif %} {% endfor %}
                            </ul>
                            {% endif %}
                          </div>
                          {% endfor %} {% endif %}
                        </div>
                      </div>
                  
                </div>
      
                <!-- /.box -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </section>




        </div>
      </div>
      <div class="tab-pane" id="variations" role="tabpanel">
        <div class="p-15">
          <section class="content">
            
            <div class="row">
              <div class="col-9"></div>
              <div class="col-3" style="
              display: flex;
              align-items: end;
              justify-content: end;
              
            ">
            <a href="#"
            id="ajouter"
            data-tooltip="tooltip"
            data-placement="top"
            title="Quick View"
            data-toggle="modal"
            data-target="#products" style="color:blue;"><strong> Ajouter Une Variation</strong>
                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="26" viewBox="0 0 24 24" fill="none" stroke="blue" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
              </a>
              </div>
              <div class="col-12">
                <div class="box">
                  <div class="box-body">
                    <form
                    action="{{ path('app_quantite_delete_group') }}"
                    method="POST"
                  >
                  <input type="text" style="display: none;" name="produit" value="{{ produit.id }}" >
                    <div class="table-responsive">
                      <table
                        id="complex_header"
                        class="table table-striped table-bordered display"
                        style="width: 100%"
                      >
                        <thead>
                          <tr>
                            <th rowspan="2"></th>
                            <th colspan="2">Combinaison des Variations</th>
      
                            <th colspan="2">Information du Vente</th>

                            <th rowspan="2">Action</th>
                          </tr>
      
                          <tr>
                            <th colspan="1">Variations</th>
                            <th colspan="1">Attribut</th>
                            <th colspan="1">Quantite En stock</th>
                            <th colspan="1" style="border-right: 1px solid #d5dfea">Prix</th>

                          </tr>
                        </thead>
                        <tbody>
                          {% for quantite in quantites %}
      
                          <tr>
                            <td>
                              <div>
                                <input
                                  type="checkbox"
                                  id="{{ quantite.id }}"
                                  name="check{{  quantite.id }}"
                                />
                                <label for="{{  quantite.id }}"></label>
                              </div>
                            </td>
                            <td>
                              {% for variation in quantite.getVariations() %}
                              <a>{{ variation }},</a>
                              {% endfor %}
                            </td>
                            <td>
                              {% for variation in quantite.getVariations() %} {% set i
                              = 0 %} {% for attribut in attributs %} {% for
                              attribut_variation in attribut.getVariations() %} {% if
                              variation ==attribut_variation.getNom() and i==0 %}
      
                              {{ attribut.getNom() }}, {% set i = 1 %} {% endif %} {%
                              endfor %} {% endfor %} {% endfor %}
                            </td>
                            <td>{{ quantite.getQteStock() }}</td>
                            <td>{{ quantite.getPrix() }}</td>
                            <td>
                              <a
                                class="btn btn-md btn-warning editquantite"
                                id="editquantite{{ quantite.id }}"
                                data-tooltip="tooltip"
                                data-placement="top"
                                title="Quick View"
                                data-toggle="modal"
                                data-target="#products"
                                {# href="{{
                                  path('app_quantite_edit_variable', {
                                    id: quantite.id,
                                    slug: produit.id
                                  })
                                }}" #}
                              >
                                <i class="fa fa-edit"></i>
                              </a>
                              <a
                              onclick="return confirm('vous voulez  le supprimer vraiment ??');"
                              href="{{
                                path('app_quantite_delete_get', {
                                  id: quantite.id , slug:produit.id
                                })
                              }}"
                              class="btn btn-md btn-danger"
                            >
                              <i class="fa fa-trash"></i>
                            </a>
                              
                            </td>
                          </tr>
                          {% endfor %}
                        </tbody>
                        <tfoot>
                          <tr>
                            <th></th>
                            <th >Variations</th>
                            <th >Attribut</th>
                            <th >Quantite En stock</th>
                            <th  >Prix</th>
                            <th></th>
                          </tr>
                        </tfoot>
                      </table>
                    </div>

                    <div class="row">
                      <div class="col-5"></div>
                      <div class="col-7">
                        <button
                          class="btn"
                          onclick="return confirm('vous voulez  les supprimer vraiment ??');"
                        >
                          <strong>supprimer</strong
                          ><i style="color: red" class="fa fa-trash"></i>
                        </button>
                      </div>
                    </div>
                  </form>







                  </div>
                </div>
              </div>
      
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </section>
         
        </div>
      </div>
      <div class="tab-pane" id="images" role="tabpanel">
        <div class="p-15">
      		<section class="content">
            <div class="row">
              <div class="col-9"></div>
              <div class="col-3" style="
              display: flex;
              align-items: end;
              justify-content: end;
              
            ">
            <a href="#"
            id="ajouterimage"
            data-tooltip="tooltip"
            data-placement="top"
            title="Quick View"
            data-toggle="modal"
            data-target="#products" style="color:blue;"><strong> Ajouter Une Image</strong>
                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="26" viewBox="0 0 24 24" fill="none" stroke="blue" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
              </a>
              </div>
    
              <div class="col-12">
    
                <div class="box">
                  
                  <!-- /.box-header -->
                  <div class="box-body">
                    <form
                    action="{{ path('app_image_delete_group') }}"
                    method="POST"
                  >
                  <input type="text" style="display: none;" name="produit" value="{{ produit.id }}" >
                    <div class="table-responsive">
                      <table id="example5" class="table table-bordered table-striped" style="width:100%">
                        <thead>
                          <tr>
                           <th class="col-1"></th>
                            <th>image</th>
                           
                            <th>variation</th>
                            <th class="col-3">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          {% for image in images %}
                            <tr>
                              <td>
                                <div>
                                  <input
                                    type="checkbox"
                                    id="{{ image.id }}"
                                    name="check{{ image.id }}"
                                  />
                                  <label for="{{ image.id }}"></label>
                                </div>
                              </td>
                              <td><img src={{ asset('uploads/others/' ~ image.url ) }} width="80" height="70"></td>
                              
                              <td>{{ image.variation.nom }}</td>
                              {% if image.produit.user.id == app.user.id or "ROLE_SUPER_ADMIN" in  app.user.Roles  %}
                                <td>
                                  <a  id="editimage{{ image.id }}"
                                  data-tooltip="tooltip"
                                  data-placement="top"
                                  title="Quick View"
                                  data-toggle="modal"
                                  data-target="#products" class="btn btn-md btn-warning editimage">
                                    <i class="fa fa-edit"></i>
                                  </a>
                                  <a
                                  onclick="return confirm('vous voulez  le supprimer vraiment ??');"
                                  href="{{
                                    path('app_image_delete_get', {
                                      id: image.id , slug:produit.id
                                    })
                                  }}"
                                  class="btn btn-md btn-danger"
                                >
                                  <i class="fa fa-trash"></i>
                                </a>
                                </td>
                              {% else %}
                                <td></td>
                              {% endif %}
                            </tr>
                          {% else %}
                            <tr>
                              <td colspan="9">no records found</td>
                            </tr>
                          {% endfor %}
                        </tbody>
                        <tfoot>
                          <tr>
                           <th></th>
                            <th>Image</th>
                            
                            <th>variation associ√©</th>
                            <th ></th>
                          </tr>
                        </tfoot>
                      </table>


                   
                    </div>

                    <div class="row">
                      <div class="col-5"></div>
                      <div class="col-7">
                        <button
                          class="btn"
                          onclick="return confirm('vous voulez  les supprimer vraiment ??');"
                        >
                          <strong>supprimer</strong
                          ><i style="color: red" class="fa fa-trash"></i>
                        </button>
                      </div>
                    </div>
                  </form>
                  </div>
                  <!-- /.box-body -->
                </div>
                <!-- /.box -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </section>
      </div>
    </div>

 

   

   

