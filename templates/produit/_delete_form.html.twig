<form
  method="post"
  action="{{ path('app_produit_delete', { id: produit.id }) }}"
  onsubmit="return confirm('vous voulez  le supprimer vraiment ??');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ produit.id) }}"
  />
  <button class="btn btn-danger btn-md"><i class="fa fa-trash"></i></button>
</form>
